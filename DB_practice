
 Q1
create table departments (
    -> department_id int unsigned not null auto_increment primary key,
    -> name varchar(20) not null,
    -> created_at timestamp default CURRENT_TIMESTAMP,
    -> updated_at timestamp default CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
    -> );
 Q2
 alter table people add department_id	int(10) unsigned after email;

 Q3
insert into departments (department_id,name) values (1,'sales'),(2,'development'),(3,'accounting'),(4,'human_resources'),(5,'information_system');

insert into people (name,department_id) values ('佐々木ロウキ',1),('大谷ショウヘイ',1),('山本ヨシノブ',1),('山中サワオ',2),('真鍋ヨシアキ',2),('佐藤シンイチロウ',2),('上田ケンジ',2),('興津ユカ',3),('宮森アオイ',4),('坂木しずか',5);

insert into reports (person_id,content)
values
(7,'ささささささささささ'),
