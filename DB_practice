Q4
update people set department_id = 1 where person_id = '1';

update people set department_id = 2 where person_id in ('2','3');

update people set department_id = 3 where person_id in ('4','6');

Q5
select gender = 1,name from people order by age desc;

Q6
<--! peopleのテーブルからdepartment_idが1に割り振られてる人の名前とメールアドレスと年齢のレコード情報を作成された順に取得する -->

Q7
select * from people where age between 20 and 29 and gender = 2;
select * from people where age between 40 and 49 and gender = 1;

select * from people where (age between 20 and 29 and gender = 2) or (age between 40 and 49 and gender = 1);

Q8
select * from people where department_id = 1 order by age asc;

Q9
select avg(age) as average_age from people where department_id = 2 and gender = 2;

Q10
select name,content  from people inner join reports on people.person_id = reports.person_id;

Q11
select name from people left outer join reports on people.person_id = reports.person_id where report_id is null;